{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "final_space": true,
    "version": 3,
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "style": "diamond",
                    "leading_diamond": "\ue0b6",
                    "trailing_diamond": "\ue0b0",
                    "background": "#DF506F",
                    "foreground": "#000000",
                    "template": " {{ .UserName }} ",
                    "type": "session"
                },
                {
                    "style": "diamond",
                    "trailing_diamond": "\ue0b0",
                    "background": "#F5DBCB",
                    "foreground": "#000000",
                    "template": " \ue5fe {{ .Path }} ",
                    "type": "path",
                    "properties": {
                        "style": "full",
                        "folder_separator_icon": " \ue0b1 "
                    }
                },
                {
                    "background": "#7192BE",
                    "foreground": "#000000",
                    "properties": {
                        "branch_icon": "\ue0a0 "
                    },
                    "style": "diamond",
                    "template": " {{ .HEAD }} ",
                    "type": "git",
                    "trailing_diamond": "\ue0b0"
                }
            ],
            "type": "prompt"
        },
        {
            "newline": true,
            "type": "prompt",
            "alignment": "left",
            "segments": [{ "type": "text", "style": "plain", "template": "$" }]
        }
    ]
}
